# Configuración de Base de Datos
DB_HOST=localhost
DB_NAME=nombre_base_datos
DB_USERNAME=usuario_bd
DB_PASSWORD=contraseña_bd
DB_CHARSET=utf8

# Configuración JWT/Seguridad
JWT_SECRET_KEY=tu_clave_secreta_jwt_muy_segura
JWT_SECRET_IV=tu_vector_inicializacion_seguro
JWT_EXPIRE_HOURS=24
ENCRYPT_METHOD=AES-256-CBC

# Configuración de Aplicación
APP_ENV=development
APP_DEBUG=true
API_BASE_URL=http://localhost/tu_proyecto/api
CORS_ORIGIN=*

# Configuración de Servidor (para producción)
# DB_HOST_PROD=servidor_produccion.com
# DB_NAME_PROD=bd_produccion
# DB_USERNAME_PROD=usuario_produccion
# DB_PASSWORD_PROD=password_produccion

# Firebase Service Account Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
# Opción A (recomendada): proveer todo el JSON del service account codificado en base64
# Ejemplo: FIREBASE_SERVICE_ACCOUNT_BASE64=eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1NiIsIn... (sin saltos de línea)
FIREBASE_SERVICE_ACCOUNT_BASE64=

# Opción B: variables individuales (si prefieres no usar el JSON completo)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_content\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your_client_cert_url
FIREBASE_UNIVERSE_DOMAIN=googleapis.com
